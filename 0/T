FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    location    "0";
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

dimensions      [0 0 0 1 0 0 0];

internalField   uniform 300;

boundaryField
{
    floor
    {
        type            wallHeatTransfer;
        Tinf            uniform 301;
        alphaWall       uniform 0.36;
        value           uniform 300;
    }
    ceiling
    {
        type            wallHeatTransfer;
        Tinf            uniform 301;
        alphaWall       uniform 0.36;
        value           uniform 300;
    }
    sWall
    {
        type            wallHeatTransfer;
        Tinf            uniform 313.2;
        alphaWall       uniform 0.54;
        value           uniform 300;
    }
    nWall
    {
        type            wallHeatTransfer;
        Tinf            uniform 305.6;
        alphaWall       uniform 0.54;
        value           uniform 300;
    }
    sideWalls
    {
        type            empty;
    }
    outlet
    {
        type            zeroGradient;
    }
    inlet
    {
        type            fixedValue;
        value           uniform 298.15;
    }
    glass1
    {
        type            wallHeatTransfer;
        alphaWall       uniform 4.3;
        value           uniform 300;
    }
    glass2
    {
        type            wallHeatTransfer;
        alphaWall       uniform 4.3;
        value           uniform 300;
    }
}


